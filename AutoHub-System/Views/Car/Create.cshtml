global using AutoHub_System.ViewModel;
global using AutoHub_System.Models;
global using AutoHub_System.Data;
global using AutoHub_System.Services;
global using AutoHub_System.Services.Interfaces;
global using Microsoft.AspNetCore.Authorization;
global using Microsoft.AspNetCore.Identity;
global using Microsoft.AspNetCore.Mvc;
@model CreateCarViewModel

@{
    ViewData["Title"] = "Add New Car";
    Layout = "_DashboardLayout";

}
<form asp-action="Create" method="post" enctype="multipart/form-data" class="form">


<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Brand" class="control-label font-weight-bold">Brand *</label>
            <input asp-for="Brand" class="form-control" placeholder="e.g., Toyota, BMW" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Model" class="control-label font-weight-bold">Model *</label>
            <input asp-for="Model" class="form-control" placeholder="e.g., Camry, X5" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Year" class="control-label font-weight-bold">Year *</label>
            <input asp-for="Year" class="form-control" min="1900" max="2024" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Price" class="control-label font-weight-bold">Price ($) *</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Mileage" class="control-label font-weight-bold">Mileage</label>
            <input asp-for="Mileage" class="form-control" placeholder="e.g., 15000" />
            <span asp-validation-for="Mileage" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Color" class="control-label font-weight-bold">Color</label>
            <input asp-for="Color" class="form-control" placeholder="e.g., Red, Blue" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="EngineType" class="control-label font-weight-bold">Engine Type</label>
            <input asp-for="EngineType" class="form-control" placeholder="e.g., V6, Electric" />
            <span asp-validation-for="EngineType" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Transmission" class="control-label font-weight-bold">Transmission</label>
            <select asp-for="Transmission" class="form-control">
                <option value="">Select Transmission</option>
                <option value="Automatic">Automatic</option>
                <option value="Manual">Manual</option>
                <option value="CVT">CVT</option>
                <option value="Semi-Automatic">Semi-Automatic</option>
            </select>
            <span asp-validation-for="Transmission" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="FuelEconomy" class="control-label font-weight-bold">Fuel Economy (MPG)</label>
            <input asp-for="FuelEconomy" class="form-control" placeholder="e.g., 30" />
            <span asp-validation-for="FuelEconomy" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="SeatNumber" class="control-label font-weight-bold">Seat Number</label>
            <input asp-for="SeatNumber" class="form-control" min="1" max="10" />
            <span asp-validation-for="SeatNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="CarStatus" class="control-label font-weight-bold">Status</label>
            <select asp-for="CarStatus" class="form-control">
                <option value="Available">Available</option>
                <option value="Sold">Sold</option>
                <option value="Reserved">Reserved</option>
                <option value="Maintenance">Maintenance</option>
            </select>
            <span asp-validation-for="CarStatus" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="form-group">
    <label asp-for="Description" class="control-label font-weight-bold">Description</label>
    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter car description..."></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label font-weight-bold">Car Images</label>
    <input type="file" asp-for="Images" multiple class="form-control-file" accept="image/*" />
    <small class="form-text text-muted">You can select multiple images</small>
</div>

<div class="form-group">
    <label class="control-label font-weight-bold">Features (one per line)</label>
    <textarea name="Features" class="form-control" rows="3" placeholder="GPS&#10;Bluetooth&#10;Backup Camera"></textarea>
    <small class="form-text text-muted">Enter each feature on a new line</small>
</div>

<div class="form-group mt-4">
    <button type="submit" class="btn btn-confirm" style="margin-bottom:20px">
        <i class="fas fa-plus-circle"></i> Add Car
    </button>
    <a asp-action="Manage" class="btn btn-cancel">Cancel</a>
</div>
    <div asp-validation-summary="All" class="text-danger mb-2"></div>
</form>
       