@model List<Car>
@{
    ViewData["Title"] = "Manage Cars";
    Layout = "_DashboardLayout";
}
@if (TempData["Success"] != null)
{
    <div class="card" style="background: rgba(65, 241, 182, 0.1); border-left: 4px solid var(--clr-success); margin-top: 1.5rem;">
        <div class="card-content">
            <div style="display: flex; align-items: center; gap: 1rem;">
                <i class="fas fa-check-circle" style="color: var(--clr-success); font-size: 1.2rem;"></i>
                <span style="color: var(--clr-success); font-weight: 600;">@TempData["Success"]</span>
            </div>
        </div>
    </div>

    <script>
        // Redirect after 2 seconds
        setTimeout(function() {
            window.location.href = '@Url.Action("Manage", "Car")';
        }, 2000);
    </script>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-view">Add New Car</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Year</th>
            <th>Price</th>
            <th>Status</th>
            <th>Date Added</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CarID</td>
                <td>@item.Brand</td>
                <td>@item.Model</td>
                <td>@item.Year</td>
                <td>$@item.Price.ToString("N2")</td>
                <td>
                    <span class="badge badge-@(item.CarSatus == "Available" ? "success" : "warning")">
                        @item.CarSatus
                    </span>
                </td>
                <td>@item.DateAdded.ToString("MMM dd, yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CarID" class="btn btn-confirm ">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.CarID" class="btn btn-cancel">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>