@model List<OrderDashbardVM>
@{
    ViewData["Title"] = "Orders Management";
    Layout = "_DashboardLayout";
}

<div>
    <h2>Orders Management</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <div class="table-container">
        <table class="orders-table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Client</th>
                    <th>Car</th>
                    <th>Total Paid</th>
                    <th>car price</th>
                    <th>Status</th>
                    <th>Order Date</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>#@order.OrderID</td>
                        <td>
                            <div>@order.Client</div>
                            <small>@order.UserEmail</small>
                        </td>
                        <td>@order.Car</td>
                        <td>$@order.TotalPaid.ToString("N2")</td>
                        <td>$@order.CarPrice.ToString("N2")</td>   
                        <td>
                            <span class="status @order.StatusBadgeClass">@order.Status</span>
                        </td>
                        <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Details" asp-route-id="@order.OrderID" class="btn btn-view">
                                    View
                                </a>

                                @if (order.CanConfirm)
                                {
                                    <form method="post" asp-action="Confirm" asp-route-id="@order.OrderID" class="action-form">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-confirm"
                                                onclick="return confirm('Confirm order #@order.OrderID?')">
                                            Confirm
                                        </button>
                                    </form>
                                }
                          

                                @if (order.CanCancel && order.CanConfirm)
                                {
                                    <form method="post" asp-action="Cancel" asp-route-id="@order.OrderID" class="action-form">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-cancel"
                                                onclick="return confirm('Cancel order #@order.OrderID?')">
                                            Cancel
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

