@* Views/DepositePolicy/Edit.cshtml *@
@model AutoHub_System.ViewModel.DepositePolicyViewModel
@{
    ViewData["Title"] = "Edit Deposit Policy";
    Layout = "_DashboardLayout";
}
<div class="dashtable" style="max-width: 600px; margin: 0 auto;">
    <h2 style="text-align: center; margin-bottom: 2rem;">Edit Deposit Policy</h2>

    <form asp-action="Edit" method="post" class="form">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="PolicyID" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="EffectiveDate" class="control-label font-weight-bold">Effective Date *</label>
            <input asp-for="EffectiveDate" class="form-control" type="date" />
            <span asp-validation-for="EffectiveDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DepositeRate" class="control-label font-weight-bold">Deposit Rate *</label>
            <div class="input-group">
                <input asp-for="DepositeRate" class="form-control" step="0.01" min="0.01" max="1.0" />
                <div class="input-group-append">
                    <span class="input-group-text">%</span>
                </div>
            </div>
            <small class="form-text text-muted">Current: @(Model.DepositeRate * 100)%</small>
            <span asp-validation-for="DepositeRate" class="text-danger"></span>
        </div>



        <div class="form-group mt-4">
            <button type="submit" class="btn btn-confirm" style="margin-bottom:20px">
                <i class="fas fa-save"></i> Save Changes
            </button>
            <a asp-action="Index" class="btn btn-cancel">Cancel</a>
            <div asp-validation-summary="All" class="text-danger mb-2"></div>
        </div>
    </form>
</div>

