@{
    ViewData["Title"] = "Payment Canceled";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background: linear-gradient(135deg, #0f0f10 0%, #1a1a2e 100%);
            color: #f5f5f5;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .card {
            max-width: 500px;
            width: 100%;
            background: #111214;
            padding: 40px 30px;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
            text-align: center;
            border: 1px solid #333;
        }

        .icon {
            font-size: 80px;
            margin-bottom: 20px;
        }

        h2 {
            font-size: 28px;
            margin-bottom: 16px;
            color: #ef4444; /* أحمر ناعم للإلغاء */
        }

        p {
            font-size: 18px;
            line-height: 1.7;
            margin-bottom: 12px;
            opacity: 0.9;
        }

        .highlight {
            color: #ffd166;
            font-weight: 600;
        }

        .btn {
            display: inline-block;
            margin-top: 30px;
            padding: 14px 32px;
            background: linear-gradient(90deg, #ffd166, #ffba33);
            color: #000;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 700;
            font-size: 18px;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(255, 209, 102, 0.3);
        }

            .btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 25px rgba(255, 209, 102, 0.4);
                background: linear-gradient(90deg, #ffba33, #ffa500);
            }

        .footer-note {
            margin-top: 40px;
            font-size: 14px;
            opacity: 0.6;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="icon">Canceled</div>
        <h2>Payment Canceled</h2>
        <p>Don't worry, <span class="highlight">no amount has been charged</span> to your card.</p>
        <p>You can try again anytime.</p>

        @* <a href="/" class="btn">Try Payment Again</a> *@
        <a asp-controller="Payment" class="btn" asp-action="index">Payment Again</a>

        <div class="footer-note">
            If you're facing any issue, feel free to contact support
        </div>
    </div>
</body>
</html>
