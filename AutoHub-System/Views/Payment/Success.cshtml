@{
    ViewData["Title"] = " Payment Confirmed ";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title> Payment Successfully Confirmed! </title>
    <style>
        body {
            font-family: sans-serif;
            background: #0f0f10;
            color: #f5f5f5;
            text-align: center;
            padding: 50px;
        }

        .card {
            max-width: 500px;
            margin: 0 auto;
            background: #111214;
            padding: 30px;
            border-radius: 16px;
        }

        h2 {
            color: #4ade80;
        }

        .btn {
            display: inline-block;
            margin-top: 20px;
            padding: 12px 24px;
            background: #ffd166;
            color: #000;
            text-decoration: none;
            border-radius: 999px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="card">
        <h2> Payment Successfully Confirmed</h2>
        <p>Thanks! <strong>@ViewBag.Name</strong> for your trust</p>
        <p>Amount: <strong>@ViewBag.Amount USD</strong></p>
        <p>Your data has been securely saved.</p>
        <a href="/Home/index" class="btn">Back to Home</a>
    </div>
</body>
</html>