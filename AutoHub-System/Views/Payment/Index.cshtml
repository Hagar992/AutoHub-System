@model Car
@{
    ViewData["Title"] = "Pay Now";
    Layout = null;
}
@section styles {
    <link rel="stylesheet" href="~/assets/css/PaymentStyle.css">
}
<body>

    <div class="card">
        <h2>Request & Pay</h2>
            

    <p class="muted">Fill the form — you'll be redirected to Stripe to pay the fee. After success, we store your data.</p>
        <form asp-action="CreateCheckoutSession" method="post" id="payForm">
            <div class="grid">
                <div>
                    <label for="name">Name *</label>
                    <input id="name" name="name" required />
                </div>
                <div>
                    <label for="email">Email *</label>
                    <input id="email" name="email" type="email" required />
                </div>
                <div>
                    <label for="phone">Phone *</label>
                    <input id="phone" name="phone" required />
                </div>
                <div>
                    <label for="phone2">Another Phone (optional)</label>
                    <input id="phone2" name="phone2" />
                </div>
                <div class="full">
                    <label for="ssn">SSN / National ID *</label>
                    <input id="ssn" name="ssn" required />
                </div>
            </div>
                <div class="actions">
                <div class="muted">Amount to pay: <strong id="amountText"> EGP @Model.Price.ToString("N0")</strong></div>
                    <button type="submit" class="btn">Pay Now</button>
                </div>
        </form>
        <div id="message"></div>
    </div>

</body>
